<h1>Edit Employee SQL</h1>

<% if (errors !=undefined) { %>
    <ul>
        <% errors.forEach((error)=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>

        <form action="/EmployeesSQL/edit/" method="POST">
            <label>EID</label>
            <input type="text" name="eid" value="<%=editEmployeeSQL.eid %>" readonly>
            <br>

            <label>Name</label>
            <input type="text" name="ename" value="<%=editEmployeeSQL.ename %>" minlength="5">
            <br>

            <label>Role:</label>
            <select name="role">
                <option value="Manager">Manager</option>
                <option value="Employee">Employee</option>
            </select>
            <br>

            <label>Salary</label>
            <input type="text" name="salary" min="1" max="1000000" value="<%=editEmployeeSQL.salary %>">
            <br>

            <button type="submit">Update</button>
        </form>


        <br>
        <a href="/">Home</a>